<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/list_item_beer_abv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="4dp"
        tools:text="ABV: "/>

    <TextView
        android:id="@+id/list_item_beer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_beer_abv"
        android:textStyle="bold"
        android:padding="4dp"
        tools:text="Beer Name"/>

    <TextView
        android:id="@+id/list_item_beer_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_beer_abv"
        android:layout_below="@id/list_item_beer_abv"
        android:padding="4dp"
        tools:text="Beer Style"/>

    <TextView
        android:id="@+id/list_item_beer_ibu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_item_beer_name"
        android:layout_below="@id/list_item_beer_abv"
        android:padding="4dp"
        tools:text="IBU: "/>

</RelativeLayout>